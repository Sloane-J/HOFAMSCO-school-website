---
// Header.astro - Main navigation header for HOFAMSCO School

const navigationItems = [
  {
    name: 'About',
    href: '/about',
    children: [
      { name: 'Meet the Principal', href: '/about/principal' },
      { name: 'Meet the Staff', href: '/about/staff' },
      { name: 'Our Mandate', href: '/about/mandate' },
      { name: 'Facilities', href: '/about/facilities' },
      { name: 'Updates', href: '/about/updates' }
    ]
  },
  {
    name: 'Learning at HOFAMSCO',
    href: '/learning',
    children: [
      { name: 'Educational Vision', href: '/learning/vision' },
      { name: 'Learning Areas', href: '/learning/areas' },
      { name: 'Kindergarten', href: '/learning/kindergarten' },
      { name: 'Primary', href: '/learning/primary' },
      { name: 'JHS', href: '/learning/jhs' }
    ]
  },
  {
    name: 'Student Life',
    href: '/student-life',
    children: [
      { name: 'Student Leadership', href: '/student-life/leadership' },
      { name: 'Uniform', href: '/student-life/uniform' },
      { name: 'Gallery', href: '/student-life/gallery' }
    ]
  },
  {
    name: 'Enrollment',
    href: '/enrollment',
    children: [
      { name: 'Enrolling at HOFAMSCO', href: '/enrollment/process' },
      { name: 'Principal Tours', href: '/enrollment/tours' },
      { name: 'School Transition', href: '/enrollment/transition' },
      { name: 'Material & Service Charges', href: '/enrollment/fees' }
    ]
  },
  {
    name: 'Connect',
    href: '/connect',
    children: [
      { name: 'Contact Us', href: '/connect/contact' },
      { name: "Principal's Office", href: '/connect/office' },
      { name: 'Vacancies', href: '/connect/vacancies' },
      { name: 'News', href: '/connect/news' }
    ]
  }
];

const contactInfo = {
  phone: '+233 XX XXX XXXX',
  whatsapp: '+233 XX XXX XXXX',
  email: 'info@hofamsco.edu.gh'
};
---

<header id="header" class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-b border-gray-200 shadow-sm">
  <!-- Top bar with contact info -->
  <div class="bg-blue-600 text-white py-2 px-4 text-sm">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
      <div class="flex items-center space-x-4">
        <a href={`tel:${contactInfo.phone}`} class="flex items-center space-x-1 hover:text-blue-100 transition-colors">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
          </svg>
          <span>{contactInfo.phone}</span>
        </a>
        <a href={`mailto:${contactInfo.email}`} class="flex items-center space-x-1 hover:text-blue-100 transition-colors">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
          </svg>
          <span>{contactInfo.email}</span>
        </a>
      </div>
      <div class="flex items-center space-x-2">
        <a
          href={`https://wa.me/${contactInfo.whatsapp.replace(/\s/g, '')}?text=Hello%20HOFAMSCO%20School,%20I%20would%20like%20to%20inquire%20about...`}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center space-x-1 bg-green-500 hover:bg-green-600 px-3 py-1 rounded-full text-xs font-medium transition-colors"
        >
          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
          </svg>
          <span>WhatsApp</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Main navigation -->
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-2">
          <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-lg">H</span>
          </div>
          <div class="hidden sm:block">
            <h1 class="text-xl font-bold text-gray-900">HOFAMSCO</h1>
            <p class="text-xs text-gray-600">School of Excellence</p>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex lg:items-center lg:space-x-8">
        {navigationItems.map((item) => (
          <div class="relative group">
            <button class="flex items-center space-x-1 py-2 px-3 text-gray-700 hover:text-blue-600 font-medium transition-colors">
              <span>{item.name}</span>
              <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>

            <!-- Dropdown menu -->
            <div class="absolute top-full left-0 mt-1 w-64 bg-white rounded-lg shadow-lg border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
              <div class="py-2">
                {item.children?.map((child) => (
                  <a
                    href={child.href}
                    class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors"
                  >
                    {child.name}
                  </a>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- CTA Buttons -->
      <div class="hidden lg:flex lg:items-center lg:space-x-4">
        <a
          href="/enrollment/process"
          class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors"
        >
          Enroll Now
        </a>
        <a
          href="/connect/contact"
          class="border border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white px-4 py-2 rounded-lg font-medium transition-colors"
        >
          Contact Us
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="lg:hidden">
        <button
          id="mobile-menu-button"
          class="p-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 transition-colors"
          aria-label="Open mobile menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </nav>

  <!-- Mobile Navigation Menu -->
  <div id="mobile-menu" class="lg:hidden hidden bg-white border-t border-gray-200">
    <div class="px-4 py-6 space-y-4">
      {navigationItems.map((item) => (
        <div class="space-y-2">
          <div class="flex items-center justify-between">
            <a
              href={item.href}
              class="text-lg font-medium text-gray-900 hover:text-blue-600 transition-colors"
            >
              {item.name}
            </a>
            {item.children && (
              <button
                class="mobile-dropdown-toggle p-2 text-gray-500 hover:text-blue-600 transition-colors"
                data-target={`mobile-dropdown-${item.name.toLowerCase().replace(/\s+/g, '-')}`}
              >
                <svg class="w-5 h-5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
            )}
          </div>

          {item.children && (
            <div
              id={`mobile-dropdown-${item.name.toLowerCase().replace(/\s+/g, '-')}`}
              class="mobile-dropdown hidden pl-4 space-y-2"
            >
              {item.children.map((child) => (
                <a
                  href={child.href}
                  class="block text-sm text-gray-600 hover:text-blue-600 transition-colors"
                >
                  {child.name}
                </a>
              ))}
            </div>
          )}
        </div>
      ))}

      <!-- Mobile CTA Buttons -->
      <div class="pt-4 space-y-3">
        <a
          href="/enrollment/process"
          class="block w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-3 rounded-lg font-medium text-center transition-colors"
        >
          Enroll Now
        </a>
        <a
          href="/connect/contact"
          class="block w-full border border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white px-4 py-3 rounded-lg font-medium text-center transition-colors"
        >
          Contact Us
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu functionality
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileDropdownToggles = document.querySelectorAll('.mobile-dropdown-toggle');

    // Toggle mobile menu
    mobileMenuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });

    // Toggle mobile dropdowns
    mobileDropdownToggles.forEach(toggle => {
      toggle.addEventListener('click', () => {
        const targetId = toggle.getAttribute('data-target');
        const dropdown = document.getElementById(targetId);
        const icon = toggle.querySelector('svg');

        if (dropdown && icon) {
          dropdown.classList.toggle('hidden');
          icon.classList.toggle('rotate-180');
        }
      });
    });

    // Close mobile menu when clicking outside
    document.addEventListener('click', (e) => {
      if (!mobileMenuButton?.contains(e.target as Node) && !mobileMenu?.contains(e.target as Node)) {
        mobileMenu?.classList.add('hidden');
      }
    });

    // Handle scroll behavior for fixed header
    let lastScrollTop = 0;
    const header = document.getElementById('header');

    window.addEventListener('scroll', () => {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

      if (header) {
        if (scrollTop > lastScrollTop && scrollTop > 100) {
          // Scrolling down - hide header
          header.style.transform = 'translateY(-100%)';
        } else {
          // Scrolling up - show header
          header.style.transform = 'translateY(0)';
        }
      }

      lastScrollTop = scrollTop;
    });

    // Add smooth transition for header
    if (header) {
      header.style.transition = 'transform 0.3s ease-in-out';
    }
  });
</script>

<style>
  /* Custom styles for header */
  .backdrop-blur-md {
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }

  /* Ensure dropdowns appear above other content */
  .group:hover .group-hover\:opacity-100 {
    z-index: 50;
  }

  /* Smooth transitions for mobile menu */
  #mobile-menu {
    transition: all 0.3s ease-in-out;
  }

  /* Custom scrollbar for mobile menu */
  #mobile-menu {
    max-height: calc(100vh - 120px);
    overflow-y: auto;
  }

  #mobile-menu::-webkit-scrollbar {
    width: 4px;
  }

  #mobile-menu::-webkit-scrollbar-track {
    background: #f1f5f9;
  }

  #mobile-menu::-webkit-scrollbar-thumb {
    background: #cbd5e1;
    border-radius: 2px;
  }

  #mobile-menu::-webkit-scrollbar-thumb:hover {
    background: #94a3b8;
  }
</style>
